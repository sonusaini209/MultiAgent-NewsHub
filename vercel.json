{
  "buildCommand": "pip install -r requirements.txt",
  "installCommand": "pip install -r requirements.txt",
  "functions": {
    "api/main.py": {
      "runtime": "python3.11"
    }
  },
  "env": [
    "NEWS_API_KEY",
    "GROQ_API_KEY"
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/main.py"
    }
  ]
}
