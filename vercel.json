{
  "buildCommand": "pip install -r requirements.txt",
  "installCommand": "pip install -r requirements.txt",
  "functions": {
    "app.py": {
      "runtime": "python3.11"
    }
  },
  "env": {
    "NEWS_API_KEY": "@news_api_key",
    "GROQ_API_KEY": "@groq_api_key"
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ]
}
